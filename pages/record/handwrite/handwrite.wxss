/* pages/record/handwrite/handwrite.wxss */
.container {
  min-height: 100vh;
  background: #F5F5F5;
  padding: 40rpx;
}

.canvas-section {
  position: relative;
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.handwrite-canvas {
  width: 100%;
  height: 600rpx;
  background: #FFFFFF;
  border: 2rpx dashed #E0E0E0;
  border-radius: 12rpx;
}

.canvas-placeholder {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  pointer-events: none;
}

.placeholder-text {
  font-size: 32rpx;
  color: #CCCCCC;
}

.toolbar {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 30rpx;
}

.tool-group {
  margin-bottom: 32rpx;
}

.tool-group:last-child {
  margin-bottom: 0;
}

.tool-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.color-picker {
  display: flex;
  gap: 20rpx;
}

.color-item {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 3rpx solid transparent;
  transition: all 0.2s;
}

.color-item.active {
  border-color: #4A90E2;
  transform: scale(1.1);
}

.width-picker {
  display: flex;
  gap: 20rpx;
}

.width-item {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 2rpx solid #E0E0E0;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.width-item.active {
  border-color: #4A90E2;
  background: #E3F2FD;
}

.width-dot {
  background: #333;
  border-radius: 50%;
}

.tool-actions {
  display: flex;
  gap: 20rpx;
}

.btn-small {
  flex: 1;
  padding: 20rpx;
  font-size: 28rpx;
}

.result-section {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 30rpx;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.result-hint {
  font-size: 24rpx;
  color: #999;
}

.result-content {
  background: #F8F8F8;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.result-textarea {
  width: 100%;
  min-height: 300rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

.result-actions {
  display: flex;
  gap: 20rpx;
}

.result-actions button {
  flex: 1;
}

.tips-section {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
}

.tips-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}
