/* pages/record/voice/voice.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #4A90E2 0%, #F5F5F5 30%);
  padding: 40rpx;
}

.record-status {
  text-align: center;
  padding: 80rpx 0;
}

.record-circle {
  width: 240rpx;
  height: 240rpx;
  margin: 0 auto 40rpx;
  background: #FFFFFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s;
}

.record-circle.recording {
  animation: pulse 1.5s infinite;
  box-shadow: 0 8rpx 24rpx rgba(74, 144, 226, 0.4);
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}

.record-icon {
  font-size: 100rpx;
}

.record-time {
  font-size: 56rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 16rpx;
  font-family: 'Courier New', monospace;
}

.record-hint {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.control-buttons {
  margin-bottom: 40rpx;
}

.btn-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.btn-large {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
}

.result-section {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.result-length {
  font-size: 24rpx;
  color: #999;
}

.result-content {
  background: #F8F8F8;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.result-textarea {
  width: 100%;
  min-height: 300rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

.result-actions {
  display: flex;
  gap: 20rpx;
}

.result-actions button {
  flex: 1;
}

.tips-section {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
}

.tips-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}
