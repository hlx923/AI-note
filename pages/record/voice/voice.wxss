/* pages/record/voice/voice.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #4A90E2 0%, #F5F5F5 30%);
  padding: 40rpx;
}

.record-status {
  text-align: center;
  padding: 80rpx 0;
}

.record-circle {
  width: 240rpx;
  height: 240rpx;
  margin: 0 auto 40rpx;
  background: #FFFFFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s;
}

.record-circle.recording {
  animation: pulse 1.5s infinite;
  box-shadow: 0 8rpx 24rpx rgba(74, 144, 226, 0.4);
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}

.record-icon {
  font-size: 100rpx;
}

.record-time {
  font-size: 56rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 16rpx;
  font-family: 'Courier New', monospace;
}

.record-hint {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.control-buttons {
  margin-bottom: 40rpx;
}

.btn-group {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.btn-large {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
}

.result-section {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.result-length {
  font-size: 24rpx;
  color: #999;
}

.result-content {
  background: #F8F8F8;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.result-textarea {
  width: 100%;
  min-height: 300rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

.result-actions {
  display: flex;
  gap: 20rpx;
}

.result-actions button {
  flex: 1;
}

.tips-section {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
}

.tips-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 模式选择器 */
.mode-selector {
  background: #FFFFFF;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
  overflow: hidden;
}

.mode-current {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  cursor: pointer;
}

.mode-label {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.mode-icon {
  font-size: 24rpx;
  color: #999;
}

.mode-options {
  border-top: 1rpx solid #F0F0F0;
}

.mode-option {
  padding: 32rpx;
  border-bottom: 1rpx solid #F0F0F0;
  transition: background 0.3s;
}

.mode-option:last-child {
  border-bottom: none;
}

.mode-option:active {
  background: #F8F8F8;
}

.option-name {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.option-desc {
  display: block;
  font-size: 24rpx;
  color: #999;
}

/* 方言选择器 */
.dialect-selector {
  background: #FFFFFF;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
  overflow: hidden;
}

.dialect-current {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  cursor: pointer;
}

.dialect-label {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.dialect-icon {
  font-size: 24rpx;
  color: #999;
}

.dialect-options {
  border-top: 1rpx solid #F0F0F0;
}

.dialect-option {
  position: relative;
  padding: 32rpx;
  border-bottom: 1rpx solid #F0F0F0;
  transition: background 0.3s;
}

.dialect-option:last-child {
  border-bottom: none;
}

.dialect-option:active {
  background: #F8F8F8;
}

.dialect-option.active {
  background: #F0F7FF;
}

.dialect-option .option-name {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.dialect-option .option-desc {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.option-check {
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: #4A90E2;
  font-weight: 700;
}

/* 说话人管理 */
.speaker-section {
  margin-bottom: 24rpx;
  padding: 24rpx;
  background: #F8F8F8;
  border-radius: 12rpx;
}

.speaker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.speaker-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.btn-add-speaker {
  padding: 8rpx 24rpx;
  background: #4A90E2;
  color: #FFFFFF;
  border: none;
  border-radius: 8rpx;
  font-size: 24rpx;
  line-height: 1;
}

.speaker-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.speaker-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background: #FFFFFF;
  border: 2rpx solid #E0E0E0;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s;
}

.speaker-item.active {
  background: #4A90E2;
  border-color: #4A90E2;
  color: #FFFFFF;
}

.speaker-name {
  flex: 1;
}

.speaker-delete {
  font-size: 32rpx;
  color: #999;
  line-height: 1;
  padding: 0 8rpx;
}

.speaker-item.active .speaker-delete {
  color: #FFFFFF;
}

.btn-insert-speaker {
  width: 100%;
  padding: 20rpx;
  background: #4A90E2;
  color: #FFFFFF;
  border: none;
  border-radius: 8rpx;
  font-size: 26rpx;
  text-align: center;
}

/* 弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 600rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
  padding: 0 8rpx;
}

.modal-body {
  padding: 32rpx;
}

.speaker-input {
  width: 100%;
  padding: 24rpx;
  background: #F8F8F8;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #F0F0F0;
}

.btn-cancel,
.btn-confirm {
  flex: 1;
  padding: 32rpx;
  background: none;
  border: none;
  font-size: 30rpx;
  text-align: center;
}

.btn-cancel {
  color: #999;
  border-right: 1rpx solid #F0F0F0;
}

.btn-confirm {
  color: #4A90E2;
  font-weight: 600;
}
