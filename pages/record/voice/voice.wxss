/* pages/record/voice/voice.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #4A90E2 0%, #E8F4F8 100%);
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.page-header {
  text-align: center;
  margin-bottom: 50rpx;
  padding: 20rpx 0;
  width: 100%;
}

.page-title {
  display: block;
  font-size: 52rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
  letter-spacing: 2rpx;
}

.page-desc {
  display: block;
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.95);
  text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
  letter-spacing: 1rpx;
}

.todo-input-section {
  width: 100%;
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.input-label {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  letter-spacing: 0.5rpx;
}

.todo-textarea {
  width: 100%;
  min-height: 220rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
  box-sizing: border-box;
}

.info-section {
  width: 100%;
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  letter-spacing: 0.5rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

.action-buttons {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
  padding: 0 10rpx;
}

.btn-save-todo {
  width: 100%;
  height: 96rpx;
  background: #fff;
  color: #667eea;
  border-radius: 48rpx;
  font-size: 34rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  line-height: 1;
}

.btn-save-todo::after {
  border: none;
}

.btn-save-todo:active {
  opacity: 0.9;
  transform: scale(0.98);
}
