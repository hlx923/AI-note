<!-- pages/record/voice/voice.wxml -->
<view class="container">
  <!-- 页面标题 -->
  <view class="page-header">
    <text class="page-title">待办事项</text>
    <text class="page-desc">快速记录你的待办事项</text>
  </view>

  <!-- 待办事项输入 -->
  <view class="todo-input-section">
    <view class="input-label">待办事件</view>
    <textarea
      class="todo-textarea"
      value="{{todoContent}}"
      placeholder="请输入待办事项..."
      maxlength="-1"
      auto-height
      bindinput="onTodoInput"
    />
  </view>

  <!-- 记录信息 -->
  <view class="info-section">
    <view class="info-item">
      <text class="info-label">记录时间</text>
      <text class="info-value">{{recordTime}}</text>
    </view>
    <view class="info-item">
      <text class="info-label">记录类型</text>
      <text class="info-value">待办事项</text>
    </view>
  </view>

  <!-- 保存按钮 -->
  <view class="action-buttons">
    <button class="btn-save-todo" bindtap="saveTodo">保存待办</button>
  </view>
</view>
