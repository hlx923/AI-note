/* pages/record/summary/summary.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #4A90E2 0%, #F5F5F5 30%);
  padding: 40rpx;
}

.header {
  text-align: center;
  padding: 40rpx 0 60rpx;
}

.header-title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 16rpx;
}

.header-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 模式选择器 */
.mode-selector {
  background: #FFFFFF;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
  overflow: hidden;
}

.mode-current {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  cursor: pointer;
}

.mode-label {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.mode-icon {
  font-size: 24rpx;
  color: #999;
}

.mode-options {
  border-top: 1rpx solid #F0F0F0;
}

.mode-option {
  padding: 32rpx;
  border-bottom: 1rpx solid #F0F0F0;
  transition: background 0.3s;
}

.mode-option:last-child {
  border-bottom: none;
}

.mode-option:active {
  background: #F8F8F8;
}

.option-name {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.option-desc {
  display: block;
  font-size: 24rpx;
  color: #999;
}

/* 输入区域 */
.input-section {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
}

.input-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.input-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.input-counter {
  font-size: 24rpx;
  color: #999;
}

.input-textarea {
  width: 100%;
  min-height: 400rpx;
  padding: 24rpx;
  background: #F8F8F8;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  margin-bottom: 24rpx;
  box-sizing: border-box;
}

.input-actions {
  display: flex;
  gap: 20rpx;
}

.btn-clear {
  flex: 1;
  height: 88rpx;
  background: #F5F5F5;
  color: #666;
  border: none;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.btn-clear::after {
  border: none;
}

.btn-clear[disabled] {
  opacity: 0.5;
}

.btn-summary {
  flex: 2;
  height: 88rpx;
  background: linear-gradient(135deg, #6495ef 0%, #9ce1ea 100%);
  color: #FFFFFF;
  border: none;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.btn-summary::after {
  border: none;
}

.btn-summary[disabled] {
  opacity: 0.5;
}

/* 结果区域 */
.result-section {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
}

.result-header {
  margin-bottom: 32rpx;
}

.result-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.result-stats {
  display: flex;
  gap: 24rpx;
}

.stat-item {
  font-size: 24rpx;
  color: #999;
}

/* 总结内容 */
.summary-content {
  padding: 24rpx;
  background: #F8F9FA;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.summary-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #4A90E2;
  margin-bottom: 16rpx;
}

.summary-text {
  display: block;
  font-size: 28rpx;
  line-height: 1.8;
  color: #333;
}

/* 关键要点 */
.keypoints-content {
  padding: 24rpx;
  background: #FFF9E6;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.keypoints-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #F59E0B;
  margin-bottom: 16rpx;
}

.keypoints-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.keypoint-item {
  padding: 16rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
  border-left: 4rpx solid #F59E0B;
}

.keypoint-text {
  font-size: 26rpx;
  line-height: 1.6;
  color: #666;
}

/* 标签 */
.tags-content {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.tag-item {
  padding: 8rpx 20rpx;
  background: #E3F2FD;
  color: #4A90E2;
  border-radius: 8rpx;
  font-size: 24rpx;
}

/* 操作按钮 */
.result-actions {
  display: flex;
  gap: 16rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #F0F0F0;
}

.btn-action {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 24rpx 0;
  background: #F8F8F8;
  border: none;
  border-radius: 12rpx;
  transition: background 0.3s;
}

.btn-action:active {
  background: #E8E8E8;
}

.btn-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.btn-text {
  font-size: 24rpx;
  color: #666;
}

/* 使用提示 */
.tips-section {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
}

.tips-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}
