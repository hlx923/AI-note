/* pages/record/document/document.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #4A90E2 0%, #F5F5F5 30%);
  padding: 40rpx;
}

.page-header {
  text-align: center;
  padding: 40rpx 0 60rpx;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 16rpx;
}

.page-desc {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 文件选择区域 */
.file-select-section {
  margin-bottom: 40rpx;
}

.select-options {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.select-card {
  flex: 1;
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 60rpx 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s;
}

.select-card:active {
  transform: scale(0.95);
}

.select-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.select-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.select-desc {
  display: block;
  font-size: 24rpx;
  color: #999;
}

/* 支持格式说明 */
.support-info {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
}

.support-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.support-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.support-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background: #F8F8F8;
  border-radius: 8rpx;
}

.support-icon {
  font-size: 32rpx;
}

.support-name {
  font-size: 24rpx;
  color: #666;
}

.support-note {
  display: block;
  font-size: 22rpx;
  color: #999;
  font-style: italic;
}

/* 文件信息显示 */
.file-info-section {
  margin-bottom: 40rpx;
}

.file-card {
  display: flex;
  align-items: center;
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.file-icon {
  font-size: 64rpx;
  margin-right: 24rpx;
}

.file-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.file-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.file-size {
  font-size: 24rpx;
  color: #999;
}

.file-actions {
  margin-left: 16rpx;
}

.file-remove {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
  padding: 0 8rpx;
}

.btn-process {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #FFFFFF;
  border: none;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  line-height: 88rpx;
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.3);
}

.btn-process[disabled] {
  opacity: 0.6;
}

/* 处理结果显示 */
.result-section {
  margin-bottom: 40rpx;
}

.result-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #F0F0F0;
}

.result-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
}

.result-reset {
  font-size: 26rpx;
  color: #4A90E2;
  padding: 8rpx 16rpx;
}

.result-item {
  margin-bottom: 32rpx;
}

.result-item:last-child {
  margin-bottom: 0;
}

.item-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.item-content {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
}

/* 核心要点 */
.key-points {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.key-point {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  padding: 20rpx;
  background: #F8F8F8;
  border-radius: 12rpx;
  border-left: 4rpx solid #4A90E2;
}

.point-number {
  flex-shrink: 0;
  width: 40rpx;
  height: 40rpx;
  background: #4A90E2;
  color: #FFFFFF;
  border-radius: 50%;
  font-size: 22rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}

.point-text {
  flex: 1;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 思考问题 */
.questions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.question-item {
  padding: 16rpx 20rpx;
  background: #FFF9E6;
  border-radius: 12rpx;
  border-left: 4rpx solid #FFC107;
}

.question-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 分类标签 */
.category-tag {
  display: inline-block;
  padding: 12rpx 24rpx;
  background: #E3F2FD;
  color: #4A90E2;
  border-radius: 8rpx;
  font-size: 26rpx;
  font-weight: 600;
}

/* 关键词 */
.keywords {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.keyword-tag {
  padding: 8rpx 20rpx;
  background: #F0F0F0;
  color: #666;
  border-radius: 8rpx;
  font-size: 24rpx;
}

/* 原文内容 */
.original-text {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.original-header {
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #F0F0F0;
}

.original-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.original-content {
  max-height: 600rpx;
  overflow-y: auto;
}

.original-text-content {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.8;
  white-space: pre-wrap;
}

/* 保存按钮 */
.save-actions {
  margin-bottom: 40rpx;
}

.btn-save {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #FFFFFF;
  border: none;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  line-height: 88rpx;
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.3);
}

/* 使用提示 */
.tips-section {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
}

.tips-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}
