/* pages/settings/settings.wxss */
.container {
  min-height: 100vh;
  background: #F5F5F5;
  padding-bottom: 40rpx;
}

.user-section {
  display: flex;
  align-items: center;
  padding: 60rpx 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin-bottom: 20rpx;
  width: 100%;
  border: none;
  border-radius: 0;
  text-align: left;
  line-height: normal;
}

.user-section::after {
  border: none;
}

.user-section-hover {
  opacity: 0.9;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  margin-right: 30rpx;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.user-stats {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

.settings-section {
  background: #FFFFFF;
  margin-bottom: 20rpx;
  padding: 0 30rpx;
}

.section-title {
  display: block;
  padding: 30rpx 0 20rpx;
  font-size: 26rpx;
  color: #999;
  font-weight: 600;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.setting-item:last-child {
  border-bottom: none;
}

.item-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.item-icon {
  font-size: 40rpx;
}

.item-label {
  font-size: 28rpx;
  color: #333;
}

.setting-item.danger .item-label {
  color: #FF4444;
}

.item-right {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.item-value {
  font-size: 26rpx;
  color: #999;
}

.item-arrow {
  font-size: 40rpx;
  color: #CCCCCC;
  line-height: 1;
}

/* 标签管理弹窗 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 600rpx;
  max-height: 80vh;
  background: #FFFFFF;
  border-radius: 20rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  font-size: 60rpx;
  color: #999;
  line-height: 1;
}

.modal-body {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.tag-input-wrapper {
  display: flex;
  gap: 16rpx;
  margin-bottom: 30rpx;
}

.tag-input {
  flex: 1;
  padding: 16rpx 20rpx;
  background: #F5F5F5;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.add-tag-btn {
  padding: 16rpx 32rpx;
  background: #4A90E2;
  color: #FFFFFF;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
  line-height: 1.4;
}

.tag-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tag-item-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #F5F5F5;
  border-radius: 12rpx;
}

.tag-name {
  font-size: 28rpx;
  color: #333;
}

.delete-tag {
  font-size: 26rpx;
  color: #FF4444;
  padding: 8rpx 16rpx;
}
